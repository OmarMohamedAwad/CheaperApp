<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBranch_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/storename_Edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/storeimg_Edittext"
            android:layout_alignStart="@+id/storeimg_Edittext"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/branchname"
            android:inputType="text"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:singleLine="true" />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="+20"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/storephone_Edittext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:background="#00ffffff"
                android:hint="@string/PhoneNumber"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/GetLocation_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_location_black_24dp" />
            <EditText
                android:id="@+id/storeaddress_Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/branchaddres"
                android:inputType="text"
                android:background="#00ffffff"
                android:layoutDirection="rtl"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:maxLines="2"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <Button
                android:layout_width="150dp"
                android:text="اضافه"
                android:background="@drawable/btnbackground"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                 android:textSize="20dp"
                android:layout_marginTop="80dp"
                android:id="@+id/btn_conditions"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>