<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
    <ImageView
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/add_image"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/pricepefore_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="217dp"
        android:background="@drawable/edittext_border"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/productname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_border"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/price_after_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pricepefore_textView"
        android:layout_marginStart="126dp"
        android:text="TextView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/productname_textView"
        android:layout_marginTop="88dp"
        android:background="@drawable/mybtn_style"
        android:text="@string/showadd"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/add_image"
        android:layout_alignStart="@+id/productname_textView"
        android:background="@drawable/mybtn_style"
        android:text="@string/endadd"
        android:textColor="#fff" />
</RelativeLayout>