<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:paddingBottom="30dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/storename_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="فرع اكتوبر" />

    <TextView
        android:id="@+id/colse_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:text="X"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/store_location_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/mybtn_style"
            android:text="@string/storelocation"
            android:textColor="@android:color/white"

            android:textSize="20dp" />

        <Button
            android:id="@+id/store_number_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/mybtn_style"
            android:text="@string/storenumber"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>