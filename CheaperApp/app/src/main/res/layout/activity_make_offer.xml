<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MakeOfferActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:gravity="center">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/selectCategory_spinner_imageview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>


        <EditText
            android:id="@+id/productName_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/storeimg_Edittext"
            android:layout_alignStart="@+id/storeimg_Edittext"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/product_name"
            android:inputType="text"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:singleLine="true" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectProduct_imageview"
                android:layout_width="0dp"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:rotation="-40"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/product_edittext"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#00ffffff"
                android:hint="@string/product_image"
                android:paddingRight="10dp"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <EditText
            android:id="@+id/productDescription_edittext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/storeimg_Edittext"
            android:layout_alignStart="@+id/storeimg_Edittext"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/multi_edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:gravity="top|right"
            android:layoutDirection="rtl"
            android:layout_gravity="top"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/priceAfter_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/storeimg_Edittext"
                android:layout_alignStart="@+id/storeimg_Edittext"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="@string/Price_Aftter_offer"
                android:textAlignment="center"
                android:inputType="number"
                android:layoutDirection="rtl"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/priceBefore_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/storeimg_Edittext"
                android:layout_alignStart="@+id/storeimg_Edittext"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:hint="@string/Price_Bfore_offer"
                android:textAlignment="center"
                android:inputType="number"
                android:layoutDirection="rtl"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/selectOfferDuration_spinner_imageview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/offerDuration_spinner"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/endDate_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="تاريخ النهاية: 28/6/1997"
                android:textAlignment="center"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:maxLines="1" />

            <TextView
                android:id="@+id/startDate_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:hint="تاريخ البداية: 28/6/1997"
                android:textAlignment="center"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:maxLines="1" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ExpandableListView
                android:id="@+id/branches_expendablelistview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>


        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/Send"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/mybtn_style"/>




    </LinearLayout>

</ScrollView>


