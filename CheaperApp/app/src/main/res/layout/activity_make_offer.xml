<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeOfferActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/selectCity_spinner_imageview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>





        <EditText
            android:id="@+id/productName_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/storeimg_Edittext"
            android:layout_alignStart="@+id/storeimg_Edittext"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/product_name"
            android:inputType="text"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:singleLine="true" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectProduct_imageview"
                android:layout_width="0dp"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:rotation="-40"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/product_edittext"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#00ffffff"
                android:hint="@string/product_image"
                android:paddingRight="10dp"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <EditText
            android:id="@+id/productDescription_edittext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/storeimg_Edittext"
            android:layout_alignStart="@+id/storeimg_Edittext"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:background="@drawable/multi_edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:gravity="top|right"
            android:layoutDirection="rtl"
            android:layout_gravity="top"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/GetLocation_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_location_black_24dp" />
            <EditText
                android:id="@+id/storeaddress_Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/storeaddres"
                android:inputType="text"
                android:background="#00ffffff"
                android:layoutDirection="rtl"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:maxLines="2"
                android:singleLine="true" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>


